{
  "name": "self-repair-server",
  "version": "0.11.6",
  "description": "Server package for Mozilla self-repair-server.",
  "main": "",
  "repository": {
    "type": "git",
    "url": "git://github.com/mozilla/self-repair-server.git"
  },
  "dependencies": {},
  "devDependencies": {
    "babel": "^4.7.1",
    "babel-core": "^4.7.1",
    "babel-loader": "^4.1.0",
    "chai": "^1.10.0",
    "es6-promises": "^1.0.9",
    "inline-source": "^4.0.1",
    "istanbul": "^0.3.5",
    "istanbul-instrumenter-loader": "^0.1.2",
    "karma-coverage": "^0.2.7",
    "karma-firefox-launcher": "^0.1.4",
    "karma-mocha": "^0.1.10",
    "karma-mocha-reporter": "^0.3.1",
    "karma-webpack": "^1.5.0",
    "messageformat": "^0.3.0-1",
    "mocha": "^2.1.0",
    "node-uuid": "^1.4.2",
    "opener": "^1.4.1",
    "scriptjs": "^2.5.7",
    "serve": "^1.4.0",
    "shelljs": "^0.5.1",
    "thirdparty": "file:thirdparty",
    "webpack": "^1.4.13"
  },
  "scripts": {
    "open": "opener",
    "webpack": "webpack --module-bind traceur-loader --config webpack.single.conf.js --watch --progress",
    "test": "node_modules/karma/bin/karma start karma.conf.js && npm run thirdparty",
    "pretest": "npm run compile && echo > test/z-ensure-coverage.js; find src -type f -name '*.js' -print0 | xargs -0 -I '{}' echo 'require(\"../{}\");' | egrep -v \"(jetpack|main.js)\" >> test/z-ensure-coverage.js",
    "locales": "bash scripts/locales.bash",
    "precompile": "npm run locales && command rm -rf deploy && mkdir deploy && node scripts/all-locales.js",
    "compile": "webpack",
    "postcompile": "node scripts/copy-built-international-sites.js && cp scripts/s3_base/index.html deploy/index.html && cp scripts/s3_base/index.html deploy/error.html",
    "demo": "npm run compile && npm test && coverage/unit/*/index.html # open a repar in a safe way too?",
    "new-recipe": "bash scripts/new-recipe.bash",
    "thirdparty": "python scripts/check-ui-tour-changes.py thirdparty/uitour.js",
    "serve": "serve -p 3111",
    "open-local": "opener 'http://localhost:3111/deploy/en-US/repair/?{\"runner\":{\"alwaysRun\":true}}'",
    "open-prod": "opener 'https://self-repair.mozilla.org/en-US/repair/?{\"runner\":{\"alwaysRun\":true}}'"
  },
  "author": "Gregg Lind <glind@mozilla.com>",
  "license": "MPL 2"
}
